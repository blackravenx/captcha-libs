{
  "name": "capsolver",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/capsolver/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": { 
        "fix": true 
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/capsolver/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/capsolver",
        "main": "libs/capsolver/index.ts",
        "tsConfig": "libs/capsolver/tsconfig.lib.json",
        "generatePackageJson": true,
        "assets": [ "libs/capsolver/README.md" ],
        "rootDir": "libs/capsolver"
      }
    }
  },
  "tags": []
}
