{
  "name": "captcha-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/captcha-client/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": { 
        "fix": true 
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/captcha-client/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "inputs": [],
      "options": {
        "outputPath": "dist/captcha-client",
        "main": "libs/captcha-client/index.ts",
        "tsConfig": "libs/captcha-client/tsconfig.lib.json",
        "assets": [ "libs/captcha-client/README.md" ],
        "rootDir": "libs/captcha-client/"
      }
    }
  }
}
