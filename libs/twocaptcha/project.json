{
  "name": "twocaptcha",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/twocaptcha/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": { 
        "fix": true 
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/twocaptcha/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/twocaptcha",
        "main": "libs/twocaptcha/index.ts",
        "tsConfig": "libs/twocaptcha/tsconfig.lib.json",
        "generatePackageJson": true,
        "assets": [ "libs/twocaptcha/README.md", "libs/twocaptcha/2captcha-logo.png" ],
        "rootDir": "libs/twocaptcha"
      }
    }
  },
  "tags": []
}
