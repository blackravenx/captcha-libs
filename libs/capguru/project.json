{
  "name": "capguru",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/capguru/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/capguru",
        "main": "libs/capguru/index.ts",
        "tsConfig": "libs/capguru/tsconfig.lib.json",
        "assets": [ "libs/capguru/README.md", "libs/capguru/capguru-logo.png" ],
        "rootDir": "libs/capguru/",
        "generatePackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs capguru {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": { 
        "fix": true 
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/capguru/jest.config.ts"
      }
    }
  },
  "tags": []
}
