{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "ES6",
    "module": "esnext",
    "lib": ["es2020", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "composite": true,
    "incremental": true,
    "paths": {
      "@captcha-libs/capguru": ["capguru/index.ts"],
      "@captcha-libs/capsolver": ["capsolver/index.ts"],
      "@captcha-libs/captcha-client": ["captcha-client/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
